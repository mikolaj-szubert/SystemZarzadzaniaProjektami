@page
@model LoginModel
@{
    ViewData["Title"] = "Logowanie";
}

<div class="row justify-content-center">
    <div class="col-md-4">
        <h1>@ViewData["Title"]</h1>
        <form id="account" method="post">
            <h2>Skorzystaj z lokalnego konta do zalogowania.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Login" class="form-control" autocomplete="username" aria-required="true" placeholder="login" />
                <label asp-for="Input.Login" class="form-label">Login</label>
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="hasło" />
                <label asp-for="Input.Password" class="form-label">Hasło</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="checkbox mb-3">
                <label asp-for="Input.RememberMe" class="form-label">
                    <input class="form-check-input" asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
            <div>
                <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Zaloguj</button>
            </div>
            <div>
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword">Zapomniane hasło?</a>
                </p>
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Zarejestruj jako nowy użytkownik</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
